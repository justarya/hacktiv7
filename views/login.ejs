<!DOCTYPE html>
<html lang="en">
<%- include('./partials/head') %>
<body>
  <%- include('./partials/nav-auth') %>
  <div id="login" class="auth-content">
    <div class="container">
      <div class="form">
        <div class="title">
          <span>Login</span>
        </div>
        <form action="" method="post">
          <div class="input-field">
            <input type="text" name="username" placeholder="Username" id="username">
            <label for="username">Username</label>
          </div>
          <div class="input-field">
            <input type="password" name="password" placeholder="Username" id="password">
            <label for="password">Password</label>
          </div>
          <p>Not registered? <a href="/register">Register</a></p>
          <button class="btn waves-effect waves-light indigo white-text" type="submit" name="action">Login</button>
        </form>
      </div>
    </div>
  </div>
</body>
</html>