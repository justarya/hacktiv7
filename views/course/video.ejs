<!DOCTYPE html>
<html lang="en">
<%- include('../partials/head') %>
<body>
  <%- include('../partials/nav') %>
  <div id="content-indi">
    <div class="banner--diagonal" style="background-image: url('<%= course.urlEmbed %>')"></div>
    <div class="container">
      <div class="row">
        <div class="col s8">
          <div class="content-indi__title">
            <span><%= course.courseName %></span>
          </div>
          <div class="content-indi__video">
            <iframe width="100%" height="500" src="<%= video.urlVideo %>" frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe> 
          </div>
        </div>
        <div class="col s4">
          <div class="content-indi__video-list">
            <div class="title">
              <h4>List</h4>
            </div>
            <div class="content-indi__video-list--container">
                <% course.Videos.forEach((el) => { %>
                    <a href="/course/<%= el.CourseId %>/video/<%= el.id %>" class="video-list">
                        <div class="video-list--left">
                                <div class="video-list__number"><%= el.order %></div>
                        </div>
                        <div class="video-list--right">
                            <div class="video-list__title"><%= el.name %></div>
                            <!-- <div class="video-list__duration">02:30</div> -->
                        </div>
                    </a>
                <% })%>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <%- include('../partials/footer') %>
</body>
</html>